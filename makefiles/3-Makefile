CC = gcc
SRC = .c
OBJ = .o
NAME = school
RM = rm

all: $(NAME)

main$(OBJ): main$(SRC)
	$(CC) -o main$(OBJ) -c main$(SRC)

school$(OBJ): school$(SRC)
	$(CC) -o school$(OBJ) -c school$(SRC)

$(NAME): main$(OBJ) school$(OBJ)
	$(CC) main$(OBJ) school$(OBJ) -o $(NAME)
clean:
	$(RM) *~
oclean:
	$(RM) *$(OBJ)
fclean:
	$(RM) *~ $(NAME) *$(OBJ)
re:
	$(CC) *$(SRC)


